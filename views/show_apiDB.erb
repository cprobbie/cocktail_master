    <img src="http://www.thecocktaildb.com/images/ingredients/<%= @result_hash["strIngredient6"] %>.png" alt="">
    <img src="http://www.thecocktaildb.com/images/ingredients/<%= @result_hash["strIngredient7"] %>.png" alt="">
